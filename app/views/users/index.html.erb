<head>
  <title>Cognify</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/solid.js" integrity="sha384-tzzSw1/Vo+0N5UhStP3bvwWPq+uvzCMfrN1fEFe+xBmv1C/AtVX5K0uZtmcHitFZ" crossorigin="anonymous"></script>
  <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/fontawesome.js" integrity="sha384-6OIrr52G08NpOFSZdxxz1xdNSndlD4vdcf/q2myIUVO0VsqaGHJsB0RaBE01VTOY" crossorigin="anonymous"></script>
  <style>body {
      font-family: 'Elianto-Regular';
      font-size: 18px;
  }</style>
</head>
<table cellpadding=15 cellspacing=15 style='text-align: center; border-collapse: separate; border-spacing: 0 20px; margin-top: 150px; background-color: white'>
    <tr >
      <th style='text-align: center; border-bottom: 2px solid; padding-bottom: 20px'></th>
      <th class="col-xs-3" style='text-align: center; border-bottom: 2px solid; padding-bottom: 20px'>Name</th>
      <th class="col-xs-3" style='text-align: center; border-bottom: 2px solid; padding-bottom: 20px'>Type</th>
      <th class="col-xs-3" style='text-align: center; border-bottom: 2px solid; padding-bottom: 20px'>Email</th>
      <th class="col-xs-3" colspan="2" style='text-align: center; border-bottom: 2px solid; padding-bottom: 20px'> </th>
    </tr>

    <% @users.find_each do |user| %>
      <tr >
        <td style='text-align: center; border-bottom: 2px solid; padding-bottom: 20px'><%= image_tag(user.avatar.url(:thumb), :class => "round-image-50") %></td>
        <td class="col-xs-2" style='text-align: center; border-bottom: 2px solid; padding-bottom: 20px'><%= user.first_name + " " + user.last_name %></td>
        <td class="col-xs-2" style='text-align: center; border-bottom: 2px solid; padding-bottom: 20px'><%= user.type %></td>
        <td class="col-xs-2" style='text-align: center; border-bottom: 2px solid; padding-bottom: 20px'><%= user.email %></td>
        <td class="col-xs-2" style='text-align: center; border-bottom: 2px solid; padding-bottom: 20px'><%= link_to '<i class="glyphicon glyphicon-user"></i> Profile'.html_safe, user_path(user), {:style => 'color:#0079bf; font-size: 18px; font-weight: bold; font-family: "Ubuntu"'} %>
        |
          <%= link_to '<i class="glyphicon glyphicon-edit"></i> Edit'.html_safe, edit_user_path(user), {:style => 'color:#0079bf; font-size: 18px; font-weight: bold; font-family: "Ubuntu"'} %>
          <%= link_to '<i class="glyphicon glyphicon-remove"></i> Delete'.html_safe, user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, :style => 'color:#0079bf; font-size: 18px; font-weight: bold; font-family: "Ubuntu"'%>
        </td>
      </tr>
    <% end %>
</table>
<div style = 'text-align: center'>
  <%#= will_paginate @users, renderer: BootstrapPagination::Rails %>
</div>
