<div class='margin-wrapper' style='width: 75%'>
<%= form_with(model: @category, local: true) do |form| %>

  <% if @category.errors.any?%>
    <div id="error_explanation">
      <h2> <%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved: </h2>
      <ul>
        <% @category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xs-4">
      <%= form.label :name %><br>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>
<br>
  <div class="row">
    <div class="col-xs-4">
      <%= form.submit "Submit"%>
    </div>
  </div>
<br>
  <div class="row">
    <div class="col-xs-4">
      <%= link_to '<i class="glyphicon glyphicon-arrow-left"></i> Back'.html_safe, categories_path(@portal), {:style => 'color:#0079bf; font-size: 18px; font-weight: bold; font-family: "Ubuntu"'} %>
    </div>
  </div>
<% end %>
</div>
