<div class='margin-wrapper' style='width: 75%'>
  <%= form_with(model: [ @course, @course.groups.build ], local: true) do |form| %>

    <% if @group.errors.any?%>
      <div id="error_explanation">
        <h2> <%= pluralize(@group.errors.count, "error") %> prohibited this course from being saved: </h2>
        <ul>
          <% @group.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-xs-5">
        <%= form.label :group_name %><br>
        <%= form.text_field :groupname, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-5">
        <%= form.label :member_limit %><br>
        <%= form.number_field :limit, class: 'form-control' %>
      </div>
    </div>

    <br>
    <div class="row">
      <div class="col-xs-5">
        <%= form.label :make_the_group_public? %><br>
        <%= form.check_box :is_public?, class: 'form-control' %>
      </div>
    </div>

    <br>
    <div class="row">
      <div class="col-xs-5">
        <%= form.submit "Submit"%>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xs-5">
      <%= link_to '<i class="glyphicon glyphicon-arrow-left"></i> Back'.html_safe, course_path(@course.portal, @course), {:style => 'color:#0079bf; font-size: 18px; font-weight: bold; font-family: "Ubuntu"'} %>
    </div>
  </div>
</div>
